<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000000"
    >
    <TableRow>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:inputType="none"
            android:layout_span="4"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_span="3"
            />
        <Button
            android:id="@+id/btnDelete"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Delete"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn7"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="7"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="8"
            android:textSize="50dp"
            android:background="@drawable/changebackground"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="9"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <Button
            android:id="@+id/btnDiv"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="/"
            android:textSize="50dp"
            android:background="#CFD4D2"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="4"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="5"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="6"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btnMul"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="*"
            android:textSize="50dp"
            android:background="#CFD4D2"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="1"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="2"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="3"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/btnSub"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="-"
            android:textSize="50dp"
            android:background="#CFD4D2"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnPoint"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="."
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/btn0"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="50dp"
            android:background="#6F8078"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/btnExe"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="="
            android:textSize="50dp"
            android:background="#CFD4D2"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="+"
            android:textSize="50dp"
            android:background="#CFD4D2"
            android:layout_margin="3dp"
            />
    </TableRow>
</TableLayout>